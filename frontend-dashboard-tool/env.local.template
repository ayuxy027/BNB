# BNB Greenfield Configuration Template
# Copy this file to .env.local and fill in your actual values

# BNB Greenfield RPC URL (Testnet)
NEXT_PUBLIC_GREENFIELD_RPC_URL=https://gnfd-testnet-fullnode-tendermint-us.bnbchain.org

# BNB Greenfield Chain ID (Testnet: 5600, Mainnet: 1017)
NEXT_PUBLIC_GREENFIELD_CHAIN_ID=5600

# Your BNB Greenfield Private Key (REPLACE WITH YOUR ACTUAL PRIVATE KEY)
# IMPORTANT: Keep this secure and never commit to version control
NEXT_PUBLIC_GREENFIELD_PRIVATE_KEY=your_private_key_here

# BNB Greenfield Bucket Name (will be created if it doesn't exist)
NEXT_PUBLIC_GREENFIELD_BUCKET_NAME=ai-creations-bucket

# Optional: Custom Storage Provider URL for viewing objects
# NEXT_PUBLIC_GREENFIELD_VIEW_URL=https://gnfd-testnet-sp1.bnbchain.org/view

# Existing IPFS Configuration (keep for fallback)
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key_here
NEXT_PUBLIC_PINATA_SECRET_API_KEY=your_pinata_secret_key_here
NEXT_PUBLIC_PINATA_JWT=your_pinata_jwt_here

# Smart Contract Configuration
NEXT_PUBLIC_RPC_URL=http://127.0.0.1:8545
NEXT_PUBLIC_CREATIONS_ADDRESS=your_contract_address_here
