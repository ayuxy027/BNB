# Pinata IPFS Configuration
# Get these from https://app.pinata.cloud/

# Option 1: Using JWT (Recommended)
NEXT_PUBLIC_PINATA_JWT=your_pinata_jwt_token_here

# Option 2: Using API Keys (Alternative)
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key_here
NEXT_PUBLIC_PINATA_SECRET_API_KEY=your_pinata_secret_api_key_here

# Local blockchain RPC (Hardhat/Anvil/Ganache)
NEXT_PUBLIC_RPC_URL=http://127.0.0.1:8545

# Deployed Creations contract address (set this after deploy)
NEXT_PUBLIC_CREATIONS_ADDRESS=0xYourDeployedContractAddress